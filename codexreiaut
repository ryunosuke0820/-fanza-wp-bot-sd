# 4) 追加CSS（Cocoon）※prefixは必ず "aa-"

```css
:root{
  /* Base tokens */
  --aa-bg: #0f1115;
  --aa-card: #151923;
  --aa-text: #e9eefc;
  --aa-muted: rgba(233,238,252,.72);
  --aa-line: rgba(233,238,252,.10);
  --aa-shadow: 0 10px 30px rgba(0,0,0,.18);
  --aa-accent: #7c5cff;
  --aa-accent2: #ff5ca8;
  --aa-good: #4cd37b;
  --aa-warn: #ffd166;
  --aa-radius: 12px;
  --aa-gap: 14px;
  --aa-pad: 14px;
  --aa-font: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Noto Sans JP","Hiragino Kaku Gothic ProN","Meiryo",sans-serif;
}

.aa-wrap{ font-family: var(--aa-font); color: var(--aa-text); }

.aa-card{
  background: var(--aa-card);
  border: 1px solid var(--aa-line);
  border-radius: var(--aa-radius);
  box-shadow: var(--aa-shadow);
  padding: var(--aa-pad);
  margin: 0 0 var(--aa-gap) 0;
}
.aa-stack{ display: grid; gap: var(--aa-gap); margin-bottom: var(--aa-gap); }
.aa-h2{ font-size: 16px; line-height: 1.2; margin: 0; }
.aa-title{ font-size: 18px; line-height: 1.3; margin: 10px 0 0 0; }
.aa-muted{ color: var(--aa-muted); font-size: 12px; }
.aa-section-head{ display:flex; align-items:flex-end; justify-content:space-between; gap:10px; margin-bottom: 10px; }

.aa-media-16x9{ border-radius: calc(var(--aa-radius) - 4px); overflow:hidden; border:1px solid var(--aa-line); }
.aa-media-inner{ position:relative; aspect-ratio:16/9; background: rgba(255,255,255,.03); }
.aa-img{ width:100%; height:100%; object-fit:cover; display:block; }
.aa-img[src=""], .aa-img:not([src]){ display:none; }
.aa-img-ph{
  position:absolute; inset:0;
  display:flex; align-items:center; justify-content:center;
  color: var(--aa-muted);
  font-size: 12px;
  padding: 10px;
}

.aa-hero-grid{ display:grid; gap: 12px; margin-top: 10px; }
.aa-points{ display:grid; gap:8px; }
.aa-point{
  border:1px solid var(--aa-line);
  border-radius: 10px;
  padding: 10px;
  background: rgba(255,255,255,.02);
  font-size: 13px;
}

.aa-meters{ display:grid; gap:10px; }
.aa-meter{ display:flex; align-items:center; justify-content:space-between; gap:10px; }
.aa-meter-label{ font-size: 12px; color: var(--aa-muted); white-space:nowrap; }
.aa-meter-dots{ display:flex; gap:6px; }
.aa-dot{
  width:10px; height:10px; border-radius: 999px;
  background: rgba(255,255,255,.14);
  border: 1px solid var(--aa-line);
}
.aa-meter-dots[data-level="1"] .aa-dot:nth-child(-n+1),
.aa-meter-dots[data-level="2"] .aa-dot:nth-child(-n+2),
.aa-meter-dots[data-level="3"] .aa-dot:nth-child(-n+3),
.aa-meter-dots[data-level="4"] .aa-dot:nth-child(-n+4),
.aa-meter-dots[data-level="5"] .aa-dot:nth-child(-n+5){
  background: linear-gradient(135deg,var(--aa-accent),var(--aa-accent2));
  border-color: transparent;
}

.aa-mini-notes{ display:flex; gap:8px; flex-wrap:wrap; margin-top: 10px; }
.aa-mini-note{
  font-size: 11px;
  color: var(--aa-muted);
  border: 1px dashed var(--aa-line);
  border-radius: 999px;
  padding: 4px 8px;
  background: rgba(255,255,255,.02);
}

.aa-details{ border:1px solid var(--aa-line); border-radius: 12px; overflow:hidden; background: rgba(255,255,255,.02); }
.aa-summary{
  list-style:none;
  padding: 12px;
  cursor:pointer;
  display:flex; align-items:center; justify-content:space-between; gap:10px;
}
.aa-summary::-webkit-details-marker{ display:none; }
.aa-summary-title{ font-size: 14px; }
.aa-summary-hint{ font-size: 12px; color: var(--aa-muted); }

.aa-table{ display:grid; }
.aa-tr{ display:grid; grid-template-columns: 36% 64%; border-top: 1px solid var(--aa-line); }
.aa-tr:first-child{ border-top:none; }
.aa-th, .aa-td{ padding: 10px 12px; font-size: 13px; }
.aa-th{ color: var(--aa-muted); background: rgba(255,255,255,.02); }

.aa-feature-top{ display:flex; align-items:center; justify-content:space-between; gap:10px; margin-bottom: 8px; }
.aa-chip{
  display:inline-flex; align-items:center;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid var(--aa-line);
  background: rgba(255,255,255,.02);
  font-size: 12px;
}
.aa-check{ font-size: 12px; color: var(--aa-muted); }

.aa-feature-meter{ display:flex; align-items:center; justify-content:space-between; gap:10px; }
.aa-meter-mini-label{ font-size: 12px; color: var(--aa-muted); }
.aa-meter-bar{
  flex: 1;
  height: 10px;
  border-radius: 999px;
  border:1px solid var(--aa-line);
  background: rgba(255,255,255,.06);
  position:relative;
  overflow:hidden;
}
.aa-meter-bar > i{
  display:block; height:100%;
  width: 0%;
  background: linear-gradient(135deg,var(--aa-accent),var(--aa-accent2));
}
.aa-meter-bar[data-level="1"] > i{ width:20%; }
.aa-meter-bar[data-level="2"] > i{ width:40%; }
.aa-meter-bar[data-level="3"] > i{ width:60%; }
.aa-meter-bar[data-level="4"] > i{ width:80%; }
.aa-meter-bar[data-level="5"] > i{ width:100%; }

.aa-slot{ margin-top: 10px; }
.aa-slot-ph{
  border: 1px dashed var(--aa-line);
  border-radius: 10px;
  padding: 12px;
  color: var(--aa-muted);
  font-size: 12px;
  background: rgba(255,255,255,.02);
  min-height: 48px;
  display:flex; align-items:center; justify-content:center;
  text-align:center;
}

.aa-cta{ position:relative; }
.aa-cta-box{ display:grid; gap: 10px; }
.aa-btn{
  display:flex; align-items:center; justify-content:center;
  text-decoration:none !important;
  border-radius: 14px;
  padding: 14px 12px;
  border: 1px solid transparent;
  background: linear-gradient(135deg,var(--aa-accent),var(--aa-accent2));
  color: #fff !important;
  font-weight: 700;
  letter-spacing: .02em;
  box-shadow: 0 14px 28px rgba(124,92,255,.18);
}
.aa-btn-secondary{
  background: transparent;
  border-color: var(--aa-line);
  color: var(--aa-text) !important;
  box-shadow: none;
}
.aa-btn-inner{ font-size: 14px; }

.aa-cta-subcard{
  border:1px solid var(--aa-line);
  border-radius: 12px;
  padding: 10px 12px;
  background: rgba(255,255,255,.02);
}
.aa-subline{ font-size: 12px; color: var(--aa-muted); }

.aa-cta-note{
  border: 1px dashed var(--aa-line);
  border-radius: 12px;
  padding: 10px 12px;
  background: rgba(255,255,255,.02);
}
.aa-note-line{ font-size: 12px; color: var(--aa-muted); }

.aa-extline{
  margin-top: 10px;
  font-size: 11px;
  color: var(--aa-muted);
  text-align: center;
}

.aa-tags{ display:flex; flex-wrap:wrap; gap:8px; margin-top: 10px; }
.aa-tag{
  display:inline-flex; align-items:center; gap:6px;
  padding: 7px 10px;
  border-radius: 999px;
  border:1px solid var(--aa-line);
  background: rgba(255,255,255,.02);
  font-size: 12px;
  color: var(--aa-text);
}
.aa-tag::before{
  content:"";
  width: 8px; height: 8px; border-radius: 999px;
  background: rgba(255,255,255,.20);
  border: 1px solid var(--aa-line);
}
.aa-tag[data-state="on"]::before{ background: var(--aa-good); border-color: transparent; }
.aa-tag[data-state="off"]::before{ background: rgba(255,255,255,.10); border-color: var(--aa-line); }
.aa-tag[data-state="maybe"]::before{ background: var(--aa-warn); border-color: transparent; }

.aa-legend{ display:flex; gap:12px; flex-wrap:wrap; margin-top: 12px; }
.aa-legend-item{ font-size: 11px; color: var(--aa-muted); display:flex; align-items:center; gap:6px; }
